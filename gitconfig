	smtpuser=0xa1f00@gmail.com
	smtpserver=smtp.gmail.com
	smtpport=587
[color]
	branch=auto
	diff=auto
	status=auto
	pager=true
[merge]
	verbosity = 1
[clean]
	requireForce = false
[apply]
	whitespace = fix
[core]
	excludesfile = ~/.gitexcludes

