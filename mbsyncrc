# -*- conf -*-

IMAPAccount gmail
# Address to connect to
Host imap.gmail.com
User 0xa1f00@gmail.com
PassCmd "~/dotfiles/mail-scripts/oauth2-authinfo.py imap.gmail.com 0xa1f00@gmail.com imap"
# Use SSL
UseIMAPS yes
# The following line should work. If get certificate errors, uncomment the two following lines and read the "Troubleshooting" section.
CertificateFile /etc/ssl/certs/ca-certificates.crt
#CertificateFile ~/.cert/imap.gmail.com.pem
#CertificateFile ~/.cert/Equifax_Secure_CA.pem

IMAPStore gmail-remote
Account gmail

MaildirStore gmail-local
# The trailing "/" is important
Path ~/Mail/Gmail/
Inbox ~/Mail/Gmail/INBOX

Channel gmail
Master :gmail-remote:
Slave :gmail-local:
# Exclude everything under the internal [Gmail] folder, except the interesting folders
Patterns INBOX "*Sent*" "[Google Mail]/Starred"

# Or include everything
#Patterns *
# Automatically create missing mailboxes, both locally and on the server
Create Slave
# Save the synchronization state files in the relevant directory
SyncState *

IMAPStore gmail-folders-remote
Account gmail

Channel gmail-folders
Master :gmail-folders-remote:
Slave :gmail-local:
# Exclude everything under the internal [Gmail] folder, except the interesting folders
Patterns "xaiki@inaes" "xaiki@inaes/opcode*" SoftwareLibreConCFK*
# Or include everything
#Patterns *
# Automatically create missing mailboxes, both locally and on the server
Create Slave
# Save the synchronization state files in the relevant directory
SyncState *

IMAPStore debian-remote
Account gmail

MaildirStore debian-local
# The trailing "/" is important
Path ~/Mail/Debian/
Inbox ~/Mail/Debian/INBOX

Channel debian
Master :debian-remote:
Slave :debian-local:
Patterns "*debian*"
# Automatically create missing mailboxes, both locally and on the server
Create Slave
# Save the synchronization state files in the relevant directory
SyncState *

IMAPAccount unq
# Address to connect to
Host imap.correo.unq.edu.ar
User niv.sardi@unq.edu.ar
PassCmd "~/dotfiles/mail-scripts/authinfo.py imap.correo.unq.edu.ar niv.sardi@unq.edu.ar imap"
# Use SSL
UseIMAPS yes
# The following line should work. If get certificate errors, uncomment the two following lines and read the "Troubleshooting" section.
#CertificateFile /etc/ssl/certs/ca-certificates.crt
#CertificateFile ~/.cert/imap.gmail.com.pem
#CertificateFile ~/.cert/Equifax_Secure_CA.pem
CertificateFile ~/dotfiles/unq.pem

IMAPStore unq-remote
Account unq

MaildirStore unq-local
# The trailing "/" is important
Path ~/Mail/UNQ/
Inbox ~/Mail/UNQ/INBOX

Channel unq
Master :unq-remote:
Slave :unq-local:
# Exclude everything under the internal [UNQ] folder, except the interesting folders
# Patterns "[UNQ]/Sent Mail" "[UNQ]/Starred" "[UNQ]/All Mail" "xaiki@inaes*" SoftwareLibreConCFK*
# Or include everything
#Patterns *
# Automatically create missing mailboxes, both locally and on the server
Create Both
# Save the synchronization state files in the relevant directory
SyncState *